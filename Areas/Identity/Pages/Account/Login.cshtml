@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header bg-white border-0 text-center">
                <h3 class="font-weight-bold text-primary-gradient mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="font-weight-bold"></label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="font-weight-bold"></label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="Input.RememberMe" class="custom-control-input" />
                                <label class="custom-control-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                        </div>
                        <div class="form-group mt-4 mb-0">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Log in</button>
                        </div>
                    </form>
                </section>
            </div>
            <div class="card-footer bg-white border-0 text-center py-3">
                <div class="small">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                    &middot;
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
