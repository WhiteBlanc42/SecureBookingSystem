@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="font-weight-bold text-primary-gradient mb-1">Admin Dashboard</h1>
            <p class="text-muted">Overview of system status and quick actions.</p>
        </div>
        <div class="text-right">
            <p class="mb-0 text-muted small">Current Date</p>
            <h5 class="font-weight-bold">@DateTime.Now.ToString("dddd, MMM dd, yyyy")</h5>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">Total Bookings</h6>
                            <h2 class="font-weight-bold mb-0">@ViewBag.TotalBookings</h2>
                        </div>
                        <i class="fas fa-calendar-check fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">Pending</h6>
                            <h2 class="font-weight-bold mb-0">@ViewBag.PendingBookings</h2>
                        </div>
                        <i class="fas fa-clock fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">Users</h6>
                            <h2 class="font-weight-bold mb-0">@ViewBag.TotalUsers</h2>
                        </div>
                        <i class="fas fa-users fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100 bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase mb-2">Rooms</h6>
                            <h2 class="font-weight-bold mb-0">@ViewBag.TotalRooms</h2>
                        </div>
                        <i class="fas fa-bed fa-2x text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h4 class="font-weight-bold mb-4">Quick Actions</h4>
    <div class="row">
        <div class="col-md-4 mb-4">
            <a asp-action="Bookings" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 hover-card">
                    <div class="card-body text-center py-5">
                        <div class="icon-circle bg-light text-primary mb-3 mx-auto">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                        <h5 class="font-weight-bold text-dark">Manage Bookings</h5>
                        <p class="text-muted small mb-0">View, confirm, or cancel bookings</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-action="Catalog" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 hover-card">
                    <div class="card-body text-center py-5">
                        <div class="icon-circle bg-light text-success mb-3 mx-auto">
                            <i class="fas fa-bed fa-2x"></i>
                        </div>
                        <h5 class="font-weight-bold text-dark">Room Catalog</h5>
                        <p class="text-muted small mb-0">Add or update hotel rooms</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a asp-action="Users" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 hover-card">
                    <div class="card-body text-center py-5">
                        <div class="icon-circle bg-light text-info mb-3 mx-auto">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <h5 class="font-weight-bold text-dark">Manage Users</h5>
                        <p class="text-muted small mb-0">View registered users</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }
    .hover-card:hover .icon-circle {
        background-color: var(--primary) !important;
        color: white !important;
    }
</style>
