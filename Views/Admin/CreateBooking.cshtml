@model SecureBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-lg mt-4">
            <div class="card-header bg-white border-0 text-center">
                <h3 class="font-weight-bold text-primary-gradient mb-0">
                    <i class="fas fa-plus-circle mr-2"></i>Create Booking
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateBooking" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="UserId" class="font-weight-bold">Assign to User</label>
                        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control form-control-lg">
                            <option value="">-- Select User --</option>
                        </select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ServiceType" class="font-weight-bold">Service Type</label>
                        <input asp-for="ServiceType" class="form-control form-control-lg" placeholder="e.g., Consultation, Appointment" />
                        <span asp-validation-for="ServiceType" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="BookingDate" class="font-weight-bold">Booking Date</label>
                        <input asp-for="BookingDate" type="date" class="form-control form-control-lg" />
                        <span asp-validation-for="BookingDate" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Status" class="font-weight-bold">Status</label>
                        <select asp-for="Status" class="form-control form-control-lg">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-block btn-lg">
                            <i class="fas fa-save mr-2"></i>Create Booking
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-white border-0 text-center py-3">
                <a asp-action="Bookings" class="text-muted">
                    <i class="fas fa-arrow-left mr-1"></i>Back to Bookings
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
