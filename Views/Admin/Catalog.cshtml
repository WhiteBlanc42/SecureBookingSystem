@model IEnumerable<SecureBookingSystem.Models.Room>

@{
    ViewData["Title"] = "Room Catalog";
}

<div class="d-flex justify-content-between align-items-center mb-4 fade-in">
    <div>
        <h1 class="font-weight-bold text-primary-gradient mb-1">Room Catalog</h1>
        <p class="text-muted">Manage hotel rooms available for booking.</p>
    </div>
    <a asp-action="CreateRoom" class="btn btn-primary">
        <i class="fas fa-plus mr-2"></i>Add Room
    </a>
</div>

<div class="row">
    @if (!Model.Any())
    {
        <div class="col-12 text-center mt-5 fade-in">
            <i class="fas fa-bed fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No rooms in catalog.</h4>
            <p>Start by adding your first room!</p>
        </div>
    }
    else
    {
        @foreach (var room in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4 fade-in">
                <div class="card h-100 border-0 shadow-sm">
                    @if (!string.IsNullOrEmpty(room.ImagePath))
                    {
                        <img src="@Url.Action("GetRoomImage", "Admin", new { fileName = room.ImagePath })" 
                             class="card-img-top" style="height: 200px; object-fit: cover;" alt="@room.Name">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title font-weight-bold mb-0">@room.Name</h5>
                            <span class="badge @(room.IsAvailable ? "badge-success" : "badge-secondary") badge-pill">
                                @(room.IsAvailable ? "Available" : "Unavailable")
                            </span>
                        </div>
                        <p class="text-muted small mb-2">@room.RoomType &bull; Max @room.MaxGuests guests</p>
                        <p class="card-text text-truncate" title="@room.Description">@room.Description</p>
                        <h4 class="text-primary-gradient font-weight-bold">$@room.PricePerNight<small class="text-muted font-weight-normal">/night</small></h4>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-end">
                        <a asp-action="EditRoom" asp-route-id="@room.Id" class="btn btn-sm btn-outline-primary mr-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form asp-action="DeleteRoom" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@room.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>
