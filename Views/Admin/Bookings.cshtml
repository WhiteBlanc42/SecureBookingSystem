@model IEnumerable<SecureBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="d-flex justify-content-between align-items-center mb-4 fade-in">
    <div>
        <h1 class="font-weight-bold text-primary-gradient mb-1">Manage All Bookings</h1>
        <p class="text-muted">View, edit, or delete bookings for all users.</p>
    </div>
</div>

<div class="card shadow-md border-0 fade-in">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-top-0 pl-4">ID</th>
                        <th class="border-top-0">User</th>
                        <th class="border-top-0">Room</th>
                        <th class="border-top-0">Check-in</th>
                        <th class="border-top-0">Check-out</th>
                        <th class="border-top-0">Status</th>
                        <th class="border-top-0">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="pl-4 font-weight-bold">#@item.Id</td>
                            <td>
                                <span class="text-muted small">@item.User?.Email</span>
                            </td>
                            <td>@item.Room?.Name</td>
                            <td>@item.BookingDate.ToString("MMM dd, yyyy")</td>
                            <td>@item.CheckOutDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @{
                                    var badgeClass = "badge-warning";
                                    if (item.Status == "Confirmed") badgeClass = "badge-success";
                                    else if (item.Status == "Cancelled") badgeClass = "badge-danger";
                                }
                                <span class="badge @badgeClass badge-pill px-3 py-2">@item.Status</span>
                            </td>
                            <td>
                                <form asp-action="UpdateStatus" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="Confirmed" />
                                    <button type="submit" class="btn btn-sm btn-link text-success p-0 mr-2">Confirm</button>
                                </form>
                                <form asp-action="UpdateStatus" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="Cancelled" />
                                    <button type="submit" class="btn btn-sm btn-link text-danger p-0 mr-2">Cancel</button>
                                </form>
                                <a asp-action="EditBooking" asp-route-id="@item.Id" class="btn btn-sm btn-link text-primary p-0 mr-2">Edit</a>
                                <form asp-action="DeleteBooking" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this booking?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-link text-dark p-0">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5 fade-in">
        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No bookings in the system.</h4>
    </div>
}
