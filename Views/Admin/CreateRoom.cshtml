@model SecureBookingSystem.Models.Room

@{
    ViewData["Title"] = "Add Room";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-lg mt-4">
            <div class="card-header bg-white border-0 text-center">
                <h3 class="font-weight-bold text-primary-gradient mb-0">
                    <i class="fas fa-bed mr-2"></i>Add New Room
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateRoom" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Name" class="font-weight-bold"></label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="e.g., Ocean View Suite" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Description" class="font-weight-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the room..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PricePerNight" class="font-weight-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input asp-for="PricePerNight" type="number" step="0.01" class="form-control form-control-lg" />
                                </div>
                                <span asp-validation-for="PricePerNight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MaxGuests" class="font-weight-bold"></label>
                                <input asp-for="MaxGuests" type="number" class="form-control form-control-lg" min="1" max="10" />
                                <span asp-validation-for="MaxGuests" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoomType" class="font-weight-bold"></label>
                                <select asp-for="RoomType" class="form-control form-control-lg">
                                    <option value="">-- Select Type --</option>
                                    <option value="Single">Single</option>
                                    <option value="Double">Double</option>
                                    <option value="Suite">Suite</option>
                                    <option value="Deluxe">Deluxe</option>
                                    <option value="Family">Family</option>
                                </select>
                                <span asp-validation-for="RoomType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IsAvailable" class="font-weight-bold d-block">Availability</label>
                                <div class="custom-control custom-switch mt-2">
                                    <input asp-for="IsAvailable" class="custom-control-input" id="availabilitySwitch" checked />
                                    <label class="custom-control-label" for="availabilitySwitch">Available for booking</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="font-weight-bold">Room Image</label>
                        <div class="custom-file">
                            <input type="file" name="imageFile" class="custom-file-input" id="imageFile" accept=".jpg,.jpeg,.png,.gif,.webp">
                            <label class="custom-file-label" for="imageFile">Choose image...</label>
                        </div>
                        <small class="text-muted">Allowed: JPG, PNG, GIF, WebP. Max 5MB.</small>
                        <span asp-validation-for="ImagePath" class="text-danger d-block"></span>
                    </div>
                    
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-block btn-lg">
                            <i class="fas fa-save mr-2"></i>Create Room
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-white border-0 text-center py-3">
                <a asp-action="Catalog" class="text-muted">
                    <i class="fas fa-arrow-left mr-1"></i>Back to Catalog
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('.custom-file-input').addEventListener('change', function(e) {
            var fileName = e.target.files[0]?.name || 'Choose image...';
            e.target.nextElementSibling.textContent = fileName;
        });
    </script>
}
