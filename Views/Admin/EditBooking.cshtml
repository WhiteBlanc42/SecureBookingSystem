@model SecureBookingSystem.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-lg mt-4">
            <div class="card-header bg-white border-0 text-center">
                <h3 class="font-weight-bold text-primary-gradient mb-0">
                    <i class="fas fa-edit mr-2"></i>Edit Booking #@Model.Id
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="EditBooking" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="RoomId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label class="font-weight-bold">User</label>
                        <input type="text" class="form-control form-control-lg bg-light" value="@ViewBag.UserEmail" readonly disabled />
                        <small class="text-muted">User cannot be changed</small>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Room</label>
                        <input type="text" class="form-control form-control-lg bg-light" value="@ViewBag.RoomName" readonly disabled />
                        <small class="text-muted">Room cannot be changed</small>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ServiceType" class="font-weight-bold">Special Requests</label>
                        <textarea asp-for="ServiceType" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="ServiceType" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BookingDate" class="font-weight-bold">Check-in Date</label>
                                <input asp-for="BookingDate" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="BookingDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CheckOutDate" class="font-weight-bold">Check-out Date</label>
                                <input asp-for="CheckOutDate" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Status" class="font-weight-bold">Status</label>
                        <select asp-for="Status" class="form-control form-control-lg">
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-block btn-lg">
                            <i class="fas fa-save mr-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-white border-0 text-center py-3">
                <a asp-action="Bookings" class="text-muted">
                    <i class="fas fa-arrow-left mr-1"></i>Back to Bookings
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
