@model IEnumerable<SecureBookingSystem.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="d-flex justify-content-between align-items-center mb-4 fade-in">
    <div>
        <h1 class="font-weight-bold text-primary-gradient mb-1">Audit Logs</h1>
        <p class="text-muted">Monitor system activities and security events.</p>
    </div>
    <button class="btn btn-outline-primary btn-sm" onclick="window.print()">
        <i class="fas fa-print mr-2"></i>Export Report
    </button>
</div>

<div class="card shadow-md border-0 fade-in">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-top-0 pl-4">Timestamp</th>
                        <th class="border-top-0">User ID</th>
                        <th class="border-top-0">Action</th>
                        <th class="border-top-0">Details</th>
                        <th class="border-top-0">IP Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="pl-4 text-muted">
                                <i class="far fa-clock mr-2 small"></i>@item.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
                            </td>
                            <td>
                                <span class="text-dark font-weight-bold">@Html.DisplayFor(modelItem => item.UserId)</span>
                            </td>
                            <td>
                                @{
                                    var badgeClass = "badge-secondary";
                                    if (item.Action.Contains("Login")) badgeClass = "badge-success";
                                    else if (item.Action.Contains("Logout")) badgeClass = "badge-info";
                                    else if (item.Action.Contains("Delete")) badgeClass = "badge-danger";
                                    else if (item.Action.Contains("Edit")) badgeClass = "badge-warning";
                                }
                                <span class="badge @badgeClass badge-pill px-3 py-2">
                                    @Html.DisplayFor(modelItem => item.Action)
                                </span>
                            </td>
                            <td class="text-truncate" style="max-width: 300px;" title="@item.Details">
                                @Html.DisplayFor(modelItem => item.Details)
                            </td>
                            <td>
                                <code class="text-primary bg-light px-2 py-1 rounded">@Html.DisplayFor(modelItem => item.IpAddress)</code>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <i class="fas fa-clipboard-check fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No logs found.</h4>
    </div>
}
